@model ArticleViewModel

    <body>
        <!--引入样式文件-->
        <link rel="stylesheet" href="~/EditorMD/css/style.css" />
        <link rel="stylesheet" href="~/EditorMD/css/editormd.preview.css" />

        <!--引入js文件-->
        @*<script src="~/EditorMD/jquery/dist/jquery.min.js"></script>*@
        <script src="~/EditorMD/js/lib/marked.min.js"></script>
        <script src="~/EditorMD/js/lib/prettify.min.js"></script>
        <script src="~/EditorMD/js/lib/raphael.min.js"></script>
        <script src="~/EditorMD/js/lib/underscore.min.js"></script>
        <script src="~/EditorMD/js/lib/sequence-diagram.min.js"></script>
        <script src="~/EditorMD/js/lib/flowchart.min.js"></script>
        <script src="~/EditorMD/js/lib/jquery.flowchart.min.js"></script>
        <script src="~/EditorMD/js/editormd.js"></script>
        <div class="transparent-bg" style="position: absolute;top: 0;left: 0;width: 100%;height: 100%;z-index: -1;zoom: 1;"></div>
        <div>
            Try Git
        </div>
        <div id="doc-content">
            <textarea style="display:none;" placeholder="markdown语言">@Model.MarkDown</textarea>
        </div>

        <script type="text/javascript">
            var testEditor;
            $(function () {
                testEditor = editormd.markdownToHTML("doc-content", {//注意：这里是上面DIV的id
                    htmlDecode: "style,script,iframe",
                    emoji: true,
                    taskList: true,
                    tocm: true,
                    tex: true, // 默认不解析
                    flowChart: true, // 默认不解析
                    sequenceDiagram: true, // 默认不解析
                    codeFold: true
                });
            });
        </script>

    </body>
