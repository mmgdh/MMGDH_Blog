            <label>标题：</label> <input id="txt_Title" type="text" style="width:100%" />
            <label>简介：</label> <input id="txt_Synosis" type="text" style="width:100%" />
            <section>
            </section>
            <input id="btn_SaveArticle" onClick="FromAjax();" type="submit" value="保存">
